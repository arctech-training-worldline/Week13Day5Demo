<UserControl x:Class="Week13Day5Demo.UserControls.SillyLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Week13Day5Demo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Rectangle Height="32" Stroke="{Binding DrawingColor}" Width="94" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Ellipse Fill="{Binding FillColor}" x:Name="Ellipse1" Height="32" Stroke="{Binding DrawingColor}" Width="94" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Foreground="{Binding DrawingColor}" Content="{Binding Text}" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Canvas>
</UserControl>
